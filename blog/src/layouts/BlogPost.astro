---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.hero-container {
				width: 100%;
				margin-bottom: 6rem;
			}
			.hero-image {
				width: 100%;
				max-height: 80vh;
				object-fit: cover;
				mask-image: linear-gradient(to bottom, black 85%, transparent);
			}
			.prose-content {
				max-width: 800px;
				margin: 0 auto;
			}
			.post-meta {
				text-align: center;
				margin-bottom: 5rem;
			}
			.post-id {
				font-size: 0.875rem;
				font-weight: 700;
				color: var(--accent);
				text-transform: uppercase;
				letter-spacing: 0.2em;
				margin-bottom: 1.5rem;
				display: block;
			}
			.subtitle {
				font-size: 1.5rem;
				color: var(--gray);
				font-style: italic;
				margin-top: 1rem;
			}
			hr {
				margin: 4rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="reveal">
				{heroImage && (
					<div class="hero-container">
						<img src={heroImage} alt="" class="hero-image" />
					</div>
				)}
				
				<div class="prose-content">
					<header class="post-meta">
						<span class="post-id">Entry No. <FormattedDate date={pubDate} /></span>
						<h1>{title}</h1>
						<p class="subtitle">{description}</p>
					</header>
					
					<div class="prose">
						<slot />
					</div>
					
					{updatedDate && (
						<div class="last-updated-on card" style="margin-top: 6rem; text-align: center; color: var(--gray); font-size: 0.875rem;">
							Exhibit updated on <FormattedDate date={updatedDate} />
						</div>
					)}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
