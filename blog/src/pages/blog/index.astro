---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Entries | ${SITE_TITLE}`}
			description={SITE_DESCRIPTION}
		/>
		<style>
			.archive-header {
				margin-bottom: 6rem;
			}
			.archive-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 3rem;
				list-style: none;
				padding: 0;
			}
			.archive-item:first-child {
				grid-column: 1 / -1;
			}
			.post-card {
				height: 100%;
				display: flex;
				flex-direction: column;
			}
			.post-img {
				width: 100%;
				aspect-ratio: 16 / 9;
				object-fit: cover;
				margin-bottom: 2rem;
				transition: var(--transition);
			}
			.archive-item:first-child .post-img {
				aspect-ratio: 21 / 9;
			}
			.post-info {
				flex-grow: 1;
			}
			.post-title {
				margin: 0 0 1rem 0;
			}
			.post-date {
				color: var(--gray);
				font-size: 0.875rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}
			@media (max-width: 768px) {
				.archive-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="archive-header reveal">
				<span class="badge">Exhibits 01â€“53</span>
				<h2>The 2025 Archive</h2>
				<p>
					A chronological timeline of decline. Entries are preserved
					in their original state of malaise.
				</p>
			</section>

			<ul class="archive-grid">
				{
					posts.map((post, index) => (
						<li
							class="archive-item reveal"
							style={`animation-delay: ${index * 0.05}s`}
						>
							<a href={`/blog/${post.id}/`} class="post-card">
								<div class="card" style="height: 100%">
									<img
										src={
											post.data.heroImage ||
											"/default-hero.png"
										}
										alt={`Visual representation for ${post.data.title}`}
										class="post-img glass-img"
									/>
									<div class="post-info">
										<div class="post-date">
											<FormattedDate
												date={post.data.pubDate}
											/>
										</div>
										<h3 class="post-title">
											{post.data.title}
										</h3>
										<p>{post.data.description}</p>
									</div>
								</div>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
