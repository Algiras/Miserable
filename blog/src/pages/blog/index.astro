---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Archive | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.archive-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 3rem;
				list-style: none;
				padding: 0;
			}
			.archive-item {
				transition: var(--transition);
			}
			.archive-item:first-child {
				grid-column: 1 / -1;
			}
			.post-preview-img {
				width: 100%;
				aspect-ratio: 2 / 1;
				object-fit: cover;
				border-radius: 1rem;
				margin-bottom: 2rem;
				border: 1px solid var(--border);
				transition: var(--transition);
			}
			.archive-item:hover .post-preview-img {
				border-color: var(--border-hover);
			}
			.post-title {
				margin-bottom: 0.5rem;
			}
			@media (max-width: 720px) {
				.archive-grid { grid-template-columns: 1fr; gap: 2rem; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<header class="reveal">
				<span class="badge">The 2025 Archive</span>
				<h2>52 Weeks of Decline</h2>
				<p>A chronological record of a year spent in perpetual dissociative retreat.</p>
				<hr/>
			</header>
			
			<ul class="archive-grid">
				{
					posts.map((post, index) => (
						<li class="archive-item reveal" style={`animation-delay: ${index * 0.05}s`}>
							<a href={`/blog/${post.id}/`} class="card">
								{post.data.heroImage && (
									<img src={post.data.heroImage} alt="" class="post-preview-img" />
								)}
								<h3 class="post-title">{post.data.title}</h3>
								<p class="date">
									<FormattedDate date={post.data.pubDate} />
								</p>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
