---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				display: flex;
				flex-direction: column;
				align-items: center;
				padding: 4rem 0 6rem;
				text-align: center;
			}
			.banner-wrap {
				width: 100%;
				margin-bottom: 5rem;
				perspective: 1000px;
			}
			.banner-img {
				width: 100%;
				max-height: 600px;
				object-fit: cover;
				filter: contrast(1.1);
				mask-image: linear-gradient(to bottom, black 70%, transparent);
			}
			.tagline {
				max-width: 800px;
				margin: 0 auto 3rem;
				font-size: 1.5rem;
				color: var(--gray);
				line-height: 1.4;
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				margin-top: 4rem;
			}
			.audiobook-section {
				max-width: 900px;
				margin: 4rem auto;
				padding: 3rem 2rem;
				text-align: center;
				background: var(--box-bg);
				border-radius: 12px;
				border: 1px solid var(--box-border);
			}
			.audiobook-container h2 {
				margin: 1rem 0;
				font-size: 2rem;
			}
			.audiobook-description {
				color: var(--gray);
				margin-bottom: 2rem;
				font-size: 1.1rem;
			}
			.video-wrapper {
				position: relative;
				padding-bottom: 56.25%; /* 16:9 aspect ratio */
				height: 0;
				overflow: hidden;
				margin: 2rem 0;
				border-radius: 8px;
			}
			.video-wrapper iframe {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				border-radius: 8px;
			}
			.audiobook-actions {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
				margin: 2rem 0 1rem;
			}
			.cc-license {
				color: var(--gray-light);
				margin-top: 1.5rem;
			}
			.cc-license a {
				color: var(--accent);
				text-decoration: none;
			}
			.cc-license a:hover {
				text-decoration: underline;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero reveal">
				<div class="banner-wrap">
					<img
						src="/banner.png"
						alt="Dark moody banner showing urban decay and atmospheric malaise"
						class="banner-img glass-img"
					/>
				</div>
				<span class="badge">How to Fail at Life</span>
				<h1>The Official Archive of<br />The Reverse Maven.</h1>
				<p class="tagline">
					A 174-page curriculum in expertly curated self-sabotage.
					From the "Anti-Mentors" to the "Somatic Shadow."
				</p>
				<a href="/blog" class="btn btn-primary">Enter the Void</a>
			</section>

			<section
				class="audiobook-section reveal"
				style="animation-delay: 0.1s"
			>
				<div class="audiobook-container">
					<span class="badge">Free Audiobook</span>
					<h2>Listen to the Full Audiobook</h2>
					<p class="audiobook-description">
						The complete 3-hour audiobook, narrated with AI voice
						synthesis. Available for free under Creative Commons
						license.
					</p>
					<div class="video-wrapper">
						<iframe
							width="560"
							height="315"
							src="https://www.youtube.com/embed/u-dnjEkpLLw"
							title="Miserable: How to Fail at Life - Full Audiobook"
							frameborder="0"
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
							referrerpolicy="strict-origin-when-cross-origin"
							allowfullscreen></iframe>
					</div>
					<div class="audiobook-actions">
						<a
							href="https://www.youtube.com/watch?v=u-dnjEkpLLw"
							class="btn btn-primary"
							target="_blank"
							rel="noopener"
						>
							Watch on YouTube
						</a>
						<a href="/blog" class="btn btn-secondary">
							Read the Blog
						</a>
					</div>
					<p class="cc-license">
						<small>
							Licensed under <a
								href="https://creativecommons.org/licenses/by-sa/4.0/"
								target="_blank"
								rel="noopener">CC BY-SA 4.0</a
							>
							â€” Free to share, remix, and build upon
						</small>
					</p>
				</div>
			</section>

			<div class="grid reveal" style="animation-delay: 0.2s">
				<div class="card">
					<span class="badge">The Masterwork</span>
					<h3>174 Pages of Failure</h3>
					<p>
						A Deluxe Volume including "The Anti-Mentors," "The
						Monolith" cover, and the "Wall of Text." No hope, just
						typography.
					</p>
				</div>
				<div class="card">
					<span class="badge">The Persona</span>
					<h3>The Reverse Maven</h3>
					<p>
						Counter-programming to Gladwell, Taleb, and Clear.
						Because success is just a lack of imagination.
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
