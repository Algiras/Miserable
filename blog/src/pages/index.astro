---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				display: flex;
				flex-direction: column;
				align-items: center;
				padding: 4rem 0 6rem;
				text-align: center;
			}
			.banner-wrap {
				width: 100%;
				margin-bottom: 5rem;
				perspective: 1000px;
			}
			.banner-img {
				width: 100%;
				max-height: 600px;
				object-fit: cover;
				filter: contrast(1.1);
				mask-image: linear-gradient(to bottom, black 70%, transparent);
			}
			.tagline {
				max-width: 800px;
				margin: 0 auto 3rem;
				font-size: 1.5rem;
				color: var(--gray);
				line-height: 1.4;
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				margin-top: 4rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero reveal">
				<div class="banner-wrap">
					<img
						src="/banner.png"
						alt="Dark moody banner showing urban decay and atmospheric malaise"
						class="banner-img glass-img"
					/>
				</div>
				<span class="badge">How to Fail at Life</span>
				<h1>The Official Archive of<br />The Reverse Maven.</h1>
				<p class="tagline">
					A 174-page curriculum in expertly curated self-sabotage.
					From the "Anti-Mentors" to the "Somatic Shadow."
				</p>
				<a href="/blog" class="btn btn-primary">Enter the Void</a>
			</section>

			<div class="grid reveal" style="animation-delay: 0.2s">
				<div class="card">
					<span class="badge">The Masterwork</span>
					<h3>174 Pages of Failure</h3>
					<p>
						A Deluxe Volume including "The Anti-Mentors," "The
						Monolith" cover, and the "Wall of Text." No hope, just
						typography.
					</p>
				</div>
				<div class="card">
					<span class="badge">The Persona</span>
					<h3>The Reverse Maven</h3>
					<p>
						Counter-programming to Gladwell, Taleb, and Clear.
						Because success is just a lack of imagination.
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
